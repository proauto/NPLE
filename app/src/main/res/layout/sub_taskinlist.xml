<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/Npicture"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/npicture" />

        <TextView
            android:id="@+id/number"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/Npicture"
            android:layout_toRightOf="@+id/Npicture"
            android:gravity="bottom"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/Npicture"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/ininlist"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toEndOf="@+id/box"
        android:layout_toRightOf="@+id/box"
        android:fillViewport="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>